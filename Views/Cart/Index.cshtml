@model IEnumerable<FoodApp.Models.Cart>
@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom">
                 <h4 class="text-black">Recipe Cart</h4>
                 <p class="text-muted fst-italic">@Model.Count() Recipes in cart</p>
            </div>
            <div>
                @foreach(var cart in Model)
                {
                    <div class="border-bottom d-flex flex-wrap p-2">
                        <img src="@cart.Image_url" class="cartImage" />
                        <a href="/Recipes/Order?id=@cart.RecipeId" class="text-decoration-none text-dark px-2 w-50 fw-bold">@cart.Title</a>
                        <span onclick="removeCartFromList('@cart.RecipeId')" class="text-danger fw-bold p-1 removeCartBtn">Remove</span>
                    </div>
                }
                @if(Model.Count() == 0)
                {
                    <div class="text-center">
                        <i class="fa-solid fa-cart-shopping text-warning emptyCart"></i>
                        <p class="fw-bold fs-4">Your Cart Is Empty</p>
                    </div>
                
                }
            </div>
        </div>
    </div>
</div>