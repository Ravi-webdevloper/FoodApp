<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Food App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css"/>
</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ulitems" asp-area="" asp-controller="Home" asp-action="Index">Food App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="ulitems navbar-nav fw-bold flex-grow-1 ">
                        <li class="nav-item">
                            <a class=" ulitems nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class=" ulitems nav-link " asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="ulitems nav-link " asp-area="">Menu</a>
                        </li>
                    </ul>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div class="d-flex justify-content-around">
                           <div class="text-center">
                                <span id="cartListIcon" ><i class="fa-solid fa-cart-shopping text-danger fs-4" aria-hidden="true"></i></span>
                                <div id="showCartList" class="position-absolute shadow-lg rounded p-2 bg-white">
                                                            
                                </div>
                           </div>
                           <div>
                                <a class="nav-link fw-bold text-danger" asp-controller="Account" asp-action="LogOut">Logout</a>
                           </div>
                       </div>
                        
                    }
                    else
                    {
                        <div>
                            <a class="nav-link fw-bold text-danger" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container mt-2">
           <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Food Application</h4>
                    <p>Healthy , save and fastest</p>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <p>Contact Us</p>
                    <div class="mt-3 mb-2">
                        <span><i class="fa-brands fa-instagram fs-5"></i></span>
                        <span class="fs-6 mx-1">Instagram</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-whatsapp fs-5"></i></span>
                        <span class="fs-6 mx-1">Whatasapp</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-facebook fs-5"></i></span>
                        <span class="fs-6 mx-1">Facebook</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-solid fa-envelope fs-5"></i></span>
                        <span class="fs-6 mx-1">Gmail</span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <p>Address</p>
                    <p>Noida UTTTAR PARDESH 272153</p>
                </div>
           </div>
           <div class="text-center fs-5">
               <p class="text-white">Powered by Ravi Chaurasiya</p>
           </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    @if (User.Identity!.IsAuthenticated)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                getAddedCarts();
                getCartItem();
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
