@model FoodApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div>
                <img src="/Images/CarouslImages/registerimg.jpg" class="w-100 h-100 mt-2" alt="/NA"/>
            </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post" action="/Account/Register">
                <div class="mb-3">
                    <h2 class="text-danger fst-italic">Register</h2>
                    <span class="fst-italic text-muted">Create Your Account</span>
                </div>
                <div class="mb-3">
                    @Html.ValidationSummary()
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Name,new{@class = "form-control",placeholder="Name"})
                    <label for="Name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextAreaFor(n => n.Address, new { @class = "form-control", placeholder = "Address" })
                    <label for="Address">Address</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Email, new { @class = "form-control", placeholder = "Email" })
                    <label for="Name">Email</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Password, new { @class = "form-control", placeholder = "Password",Type="password" })
                    <label for="Password">Password</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-dark p-2 shadow rounded w-100">Register</button>
                </div>
                <div class="mb-3">
                    <span>already have an account</span>
                    <a asp-controller="Account" asp-action="Login">Login Here</a>
                </div>
            </form>
        </div>
    </div>
</div>