@model FoodApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="row shadow-rounded-2">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="">
                <img src="~/Images/CarouslImages/AccountLoginimg.webp" class="w-100" />
            </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
           <form autocomplete="off" method="post" class="p-3 m-3">
                <div class="mb-3">
                    <h2 class="text-danger fs-5 fst-italic">Login</h2>
                    <span class="fst-italic">Login into your account</span>
                </div>
                <div class="mb-3">
                    @Html.ValidationSummary()
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control",placeholder="Email" })
                    <label  for="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(p => p.Password, new { @class = "form-control", Type = "password",placeholder="password" })
                    <label  for="Password">Password</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-dark w-100 p-2 shadow rounded">LogIn</button>
                </div>
                <div class="mb-3">
                   <span>Don't have an account?</span>
                    <a asp-controller="Account" asp-action="Register">Register Here</a>
                </div>
           </form>
           
        </div>
    </div>
</div>