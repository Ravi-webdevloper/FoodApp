@model FoodApp.Models.EditUserViewModel;
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <div class="row justify-content-center ">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6  m-2 shadow">
            <form autocomplete="off" method="post" action="/Account/Update">
                <div>
                    <span class="fst-italic text-muted text-primary">Update Your Account</span>
                </div>
                <div class="mb-3">
                    @Html.ValidationSummary()
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Id" readonly hidden="hidden" class="form-control"/>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "Name" })
                    <label for="Name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.UserName, new { @class = "form-control", placeholder = "Name" })
                    <label for="Username">UserName</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextAreaFor(n => n.Address, new { @class = "form-control", placeholder = "Address" })
                    <label for="Address">Address</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Email, new { @class = "form-control", placeholder = "Email", Type = "Readonly" })
                    <label for="Name">Email</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(n => n.Password, new { @class = "form-control", placeholder = "Password", Type = "password" })
                    <label for="Password">Password</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-dark p-2 shadow rounded w-100">Update Account</button>
                </div>
               @*  <div class="mb-3">
                    <span>already have an account</span>
                    <a asp-controller="Account" asp-action="Login">Login Here</a>
                </div> *@
            </form>
        </div>
    </div>
</div>
